{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es5",
        "lib": ["dom", "dom.iterable", "esnext"],
        "declaration": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "CommonJS",
        "moduleResolution": "node",
        "typeRoots": ["node_modules/@types"],
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noEmit": false,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@casai/design-system": ["libs/design-system/src/index.ts"],
            "@casai/design-system/button": [
                "libs/design-system/src/button/index.tsx"
            ]
        }
    },
    "include": ["src"]
}
